<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainCadastroActivityFireBase">
    <TextView
        android:text="Novo Cadastro"
        android:id="@+id/TextViewCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="10dip"
        android:drawableLeft="@drawable/person"
        android:id="@+id/nomeIDfb"
        android:textColor="#949494"
        android:hint="Nome"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="10dip"
        android:drawableLeft="@drawable/email"
        android:id="@+id/emailIDfb"
        android:textColor="#949494"
        android:layout_below="@+id/nomeIDfb"
        android:hint="E-mail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cadastrar"
        android:textSize="20dp"
        android:id="@+id/cadastrarIDfb"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#52bce6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Voltar"
        android:textSize="20dp"
        android:id="@+id/voltarIDfb"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:background="#ffffff"
        android:layout_above="@+id/cadastrarIDfb"
        android:layout_alignLeft="@+id/cadastrarIDfb"
        android:layout_alignStart="@+id/cadastrarIDfb"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dip"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaIDfb"
        android:hint="Senha"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/emailIDfb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/senhaConIDfb"
        android:layout_alignEnd="@+id/senhaConIDfb"
        android:textColorHint="#949494" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dip"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaConIDfb"
        android:hint="Confirme sua senha"
        android:layout_below="@+id/senhaIDfb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#949494" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp" />
</RelativeLayout>