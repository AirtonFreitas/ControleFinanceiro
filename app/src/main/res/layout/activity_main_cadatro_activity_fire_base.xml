<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainCadatroActivityFireBase">
    <TextView
        android:text="Novo Cadastro"
        android:id="@+id/TextViewCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:text="Nome"
        android:textSize="15dp"
        android:id="@+id/TextViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeIDfb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomeIDfb"
        android:layout_marginTop="27dp"
        android:textColor="#949494"
        android:layout_below="@+id/TextViewCadastro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailIDfb"
        android:textColor="#949494"
        android:layout_below="@+id/TextViewNome"
        android:layout_alignRight="@+id/senhaConIDfb"
        android:layout_alignEnd="@+id/senhaConIDfb" />
    <TextView
        android:text="Email"
        android:textSize="15dp"
        android:id="@+id/TextViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailIDfb"
        android:layout_alignRight="@+id/TextViewNome"
        android:layout_alignEnd="@+id/TextViewNome"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:text="Senha"
        android:textSize="15dp"
        android:id="@+id/TextViewSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senhaIDfb"
        android:layout_alignLeft="@+id/TextViewEmail"
        android:layout_alignStart="@+id/TextViewEmail"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:text="Confirmação de senha"
        android:textSize="15dp"
        android:id="@+id/TextViewConSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senhaConIDfb"
        android:layout_alignLeft="@+id/TextViewSenha"
        android:layout_alignStart="@+id/TextViewSenha"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <Button
        android:text="Cadastrar"
        android:textSize="20dp"
        android:id="@+id/cadastrarIDfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:text="Voltar"
        android:textSize="20dp"
        android:id="@+id/voltarIDfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaIDfb"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/senhaConIDfb"
        android:layout_alignEnd="@+id/senhaConIDfb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaConIDfb"
        android:layout_below="@+id/TextViewSenha"
        android:layout_alignRight="@+id/cadastrarIDfb"
        android:layout_alignEnd="@+id/cadastrarIDfb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>